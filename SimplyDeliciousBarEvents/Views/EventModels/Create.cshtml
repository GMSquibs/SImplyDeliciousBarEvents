@model SimplyDeliciousBarEvents.Models.EventModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label">Event Date</label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventTime" class="control-label">Event Time</label>
                <input asp-for="EventTime" class="form-control" />
                <span asp-validation-for="EventTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventNotes" class="control-label">Event Notes</label>
                <input asp-for="EventNotes" class="form-control" />
                <span asp-validation-for="EventNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventCost" class="control-label">Event Cost</label>
                <input asp-for="EventCost" class="form-control" />
                <span asp-validation-for="EventCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeadCount" class="control-label">Head Count</label>
                <input asp-for="HeadCount" class="form-control" />
                <span asp-validation-for="HeadCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
