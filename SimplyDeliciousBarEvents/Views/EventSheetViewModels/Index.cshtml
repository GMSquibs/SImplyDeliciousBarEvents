@model IEnumerable<SimplyDeliciousBarEvents.Models.EventSheetViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventCost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventSheetID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventSheetID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventSheetID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
